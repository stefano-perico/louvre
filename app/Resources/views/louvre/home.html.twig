{% extends '::base.html.twig' %}
{% block body %}
    <article id="img_accueil" class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            <h1 class="display-4 font-weight-normal">{% trans %}Bienvenue au Louvre{% endtrans %}</h1>
            <a class="btn btn-info btn-lg" href="{{ path('invoice') }}">Billetterie</a>
        </div>
    </article>

    <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
        <div class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
            <div class="my-3 py-3">
                <h2 class="display-5">En Famille</h2>
                <p class="lead">Activités enfants pour les vacances de Pâques.</p>
            </div>
            <img src="https://www.louvre.fr/sites/default/files/imagecache/278x175/medias/medias_images/images/louvre-atelier-enfants-d-ou-vient-la-lumiere-278-175-px.jpg?1523005411">
        </div>
        <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
            <div class="my-3 p-3">
                <h2 class="display-5">Canson présente</h2> 
                <p class="lead">Un jour, une oeuvre.</p>
            </div>
            <img src="https://www.louvre.fr/sites/default/files/imagecache/278x175/medias/medias_images/images/louvre-jean-simeon-chardin-autoportrait.jpg?1320489016">
        </div>
    </div>
{% endblock %}